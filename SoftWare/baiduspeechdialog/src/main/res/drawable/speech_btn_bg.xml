<?xml version="1.0" encoding="utf-8"?>
<!-- 搜索界面的语音对话框按钮的背景 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <!-- 圆角 -->
    <corners android:radius="5dp" />
    <!-- 描边 -->
    <!-- <stroke android:width="1dp" android:color="#A0C9F0" /> -->
    <!-- 内边距 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
    <!-- 填充 -->
    <solid android:color="#378dfc" />
</shape>